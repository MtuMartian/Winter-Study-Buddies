<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miles.winterwonderhack2017">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.HomePage.HomeActivity" />
        <activity android:name=".Activities.RegisterUserActivity" />
        <activity android:name=".Activities.CreatePostingPage.CreatePostingActivity" />
        <activity android:name=".Activities.DiscussionPage.DiscussionActivity" />
        <activity android:name=".Activities.EditProfilePage.EditProfileActivity" />
        <activity android:name=".Activities.GroupManagementPage.GroupManagementActivity" />
        <activity android:name=".Activities.PostingPage.PostingActivity" />
        <activity android:name=".Activities.ViewProfilePage.ProfileActivity"></activity>
    </application>

</manifest>